
@model List<dotnet_mvc_todo_app.Models.TodoViewModel>
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">All Todo List</h1>
    <a  asp-area="" asp-controller="Todo" asp-action="Create">Add New todo</a>
		<ol class="mt-4">
			@foreach (var todo in Model){
				<li class="text-start"><a asp-controller="Todo" asp-action="Get" asp-route-id="@todo.Id" >
					@todo.Title : 
					@if (@todo.IsDone){
						<span>Done</span>
					} 
					else {
						<span>Not Done</span>
					}
				</a>
				</li>
			}
		</ol>
</div>